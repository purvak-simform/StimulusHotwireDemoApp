<% if @users.empty? %>
  <h4>There are no teams in the system at this time.</h4>
<% else %>
  <h1>Users</h1>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Admin</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.surname %></td>
          <td><%= user.role %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to "Back to Home", home_dashboard_path %>
<% end %>
